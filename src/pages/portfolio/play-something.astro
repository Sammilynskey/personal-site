---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Contact from '~/components/widgets/Contact.astro';
import Gallery, { type GalleryItem } from '~/components/widgets/Gallery.astro';

const metadata = {
  title: 'Netflix',
};

const project = {
  title: 'Play Something',
  client: 'Netflix',
  date: 'October 2020',
  team: [
    { name: 'Sam Lynskey', role: 'Art Director' },
    { name: 'Aiden A.', role: 'Art Director' },
    { name: 'Sharon C.', role: 'Art Director' },
    { name: 'Isa D.', role: 'Art Director' },
    { name: 'Vic P.', role: 'Art Director' },
    { name: 'Carl C.', role: 'Creative Director' },
    { name: 'Clay S.', role: 'Copywriter' },
    { name: 'Charlotte W.', role: 'Copywriter' },
  ],
  heroImage: '/assets/projects/P5-Netflix/hero.jpg',
  gallery: [
    { type: 'video', src: '/assets/projects/P5-Netflix/1.mp4', alt: 'Netflix video 1' },
    { type: 'video', src: '/assets/projects/P5-Netflix/2.mp4', alt: 'Netflix video 2' },
    { type: 'image', src: '/assets/projects/P5-Netflix/3.jpg', alt: 'Netflix image 1' },
    { type: 'video', src: '/assets/projects/P5-Netflix/4.mp4', alt: 'Netflix video 3' },
  ] as GalleryItem[],
  description: `
    Netflix is launching a new feature called "Play Something" in 93 different countries around the world. Essentially a 'shuffle' feature, Play Something uses the Netflix algorithm and personal data to pick something for you to watch. It lets your choices choose for you.
  `,
};

const backLink = '/#portfolio';
---

<Layout metadata={metadata}>
  <!-- Project Header -->
  <section class="pt-16 md:pt-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <a href={backLink} class="inline-flex items-center gap-2 mb-8 transition duration-300">
        <Icon name="tabler:arrow-left" class="w-5 h-5" />
        Back to Portfolio
      </a>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{project.title}</h1>
    </div>
  </section>

  <!-- Hero Image -->
  <section class="py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="bg-white p-2 rounded-xl shadow-lg overflow-hidden">
        <img src={project.heroImage} alt={project.title} class="w-full rounded-lg" />
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row gap-10">
        <div class="md:w-1/3">
          <div class="p-6 rounded-xl bg-[linear-gradient(to_right,_rgb(123_16_230),_rgb(100_10_200))] text-white">
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold">Client</h4>
                <p>{project.client}</p>
              </div>
              <div>
                <h4 class="font-semibold">Date</h4>
                <p>{project.date}</p>
              </div>
              <div>
                <h4 class="font-semibold">Team</h4>
                <ul class="list-disc list-inside space-y-1">
                  {
                    project.team.map((member) => (
                      <li>
                        {member.name} ({member.role})
                      </li>
                    ))
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="md:w-2/3">
          <h2 class="text-2xl font-bold mb-4">Description</h2>
          <div class="max-w-none space-y-4">
            {project.description.split('\n\n').map((paragraph) => <p>{paragraph}</p>)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <div
    class="gallery-swiper-container"
    data-slides-base={1}
    data-slides-sm={2}
    data-slides-lg={3}
    data-space-between={20}
  >
    <Gallery
      bg="bg-[linear-gradient(to_right,_rgb(123_16_230),_rgb(100_10_200))]"
      items={project.gallery}
      slidesPerView={{ base: 1, sm: 2, lg: 3 }}
      spaceBetween={20}
      showPagination={true}
      showNavigation={true}
      showLightbox={true}
      aspectRatio="aspect-video"
      imageClass="w-full h-64 object-cover rounded-lg"
    />
  </div>

  <!-- Navigation -->
  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex justify-between">
        <a href="/portfolio/coach-sanders" class="inline-flex items-center gap-2">
          <Icon name="tabler:arrow-left" class="w-5 h-5" />
          Previous Project
        </a>
        <a href="/portfolio/umoja-pelota" class="inline-flex items-center gap-2">
          Next Project
          <Icon name="tabler:arrow-right" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <Contact
    id="contact"
    title="Thanks for checking out my portfolio!"
    subtitle="Let's grab a coffee"
    socialLinks={[
      { platform: 'Email', icon: 'tabler:mail', url: 'mailto:samlynskey.sl@gmail.com' },
      { platform: 'LinkedIn', icon: 'tabler:brand-linkedin', url: 'https://www.linkedin.com/in/samlynskey' },
      { platform: 'Instagram', icon: 'tabler:brand-instagram', url: 'https://www.instagram.com/sammi_lynskey' },
    ]}
  />
</Layout>
