---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';
import Contact from '~/components/widgets/Contact.astro';
import Gallery, { type GalleryItem } from '~/components/widgets/Gallery.astro';

const metadata = {
  title: 'EA Sports FIFA',
};

const project = {
  title: 'Umoja Pelota',
  client: 'EA Sports FIFA',
  date: 'November 2020',
  team: [
    { name: 'Sam Lynskey', role: 'Art Director' },
    { name: 'Keshia E.', role: 'Art Director' },
    { name: 'Madison D.', role: 'Copywriter' },
    { name: 'Clay S.', role: 'Copywriter' },
    { name: 'Lauren H.', role: 'Strategy' },
    { name: 'Andrew W.', role: 'Strategy' },
  ],
  heroImage: '/assets/projects/P6-EASports/hero.jpg',
  gallery: [
    { type: 'image', src: '/assets/projects/P6-EASports/1.jpg', alt: 'EA Sports image 1' },
    { type: 'image', src: '/assets/projects/P6-EASports/2.jpg', alt: 'EA Sports image 2' },
    { type: 'video', src: '/assets/projects/P6-EASports/3.mp4', alt: 'EA Sports video 1' },
    { type: 'image', src: '/assets/projects/P6-EASports/4.jpg', alt: 'EA Sports image 3' },
    { type: 'image', src: '/assets/projects/P6-EASports/5.jpg', alt: 'EA Sports image 4' },
  ] as GalleryItem[],
  description: `
    Following the 2019 No Room For Racism campaign, EA Sports wants to use their upcoming FIFA21 release to do even more to fight Racism within the associated football community. Umoja is the Swahili word for Unity, and Pelota is Spanish for Ball.
  `,
};

const backLink = '/#portfolio';
---

<Layout metadata={metadata}>
  <!-- Project Header -->
  <section class="pt-16 md:pt-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <a href={backLink} class="inline-flex items-center gap-2 mb-8 transition duration-300">
        <Icon name="tabler:arrow-left" class="w-5 h-5" />
        Back to Portfolio
      </a>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{project.title}</h1>
    </div>
  </section>

  <!-- Hero Image -->
  <section class="py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="bg-white p-2 rounded-xl shadow-lg overflow-hidden">
        <img src={project.heroImage} alt={project.title} class="w-full rounded-lg" />
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row gap-10">
        <div class="md:w-1/3">
          <div class="p-6 rounded-xl bg-[linear-gradient(to_right,_rgb(123_16_230),_rgb(100_10_200))] text-white">
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold">Client</h4>
                <p>{project.client}</p>
              </div>
              <div>
                <h4 class="font-semibold">Date</h4>
                <p>{project.date}</p>
              </div>
              <div>
                <h4 class="font-semibold">Team</h4>
                <ul class="list-disc list-inside space-y-1">
                  {
                    project.team.map((member) => (
                      <li>
                        {member.name} ({member.role})
                      </li>
                    ))
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="md:w-2/3">
          <h2 class="text-2xl font-bold mb-4">Description</h2>
          <div class="max-w-none space-y-4">
            {project.description.split('\n\n').map((paragraph) => <p>{paragraph}</p>)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <div
    class="gallery-swiper-container"
    data-slides-base={1}
    data-slides-sm={2}
    data-slides-lg={3}
    data-space-between={20}
  >
    <Gallery
      bg="bg-[linear-gradient(to_right,_rgb(123_16_230),_rgb(100_10_200))]"
      items={project.gallery}
      slidesPerView={{ base: 1, sm: 2, lg: 3 }}
      spaceBetween={20}
      showPagination={true}
      showNavigation={true}
      showLightbox={true}
      aspectRatio="aspect-video"
      imageClass="w-full h-64 object-cover rounded-lg"
    />
  </div>

  <!-- Navigation -->
  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex justify-between">
        <a href="/portfolio/play-something" class="inline-flex items-center gap-2">
          <Icon name="tabler:arrow-left" class="w-5 h-5" />
          Previous Project
        </a>
        <a href="/portfolio/endangered-cities" class="inline-flex items-center gap-2">
          Next Project
          <Icon name="tabler:arrow-right" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <Contact
    id="contact"
    title="Thanks for checking out my portfolio!"
    subtitle="Let's grab a coffee"
    socialLinks={[
      { platform: 'Email', icon: 'tabler:mail', url: 'mailto:samlynskey.sl@gmail.com' },
      { platform: 'LinkedIn', icon: 'tabler:brand-linkedin', url: 'https://www.linkedin.com/in/samlynskey' },
      { platform: 'Instagram', icon: 'tabler:brand-instagram', url: 'https://www.instagram.com/sammi_lynskey' },
    ]}
  />
</Layout>
