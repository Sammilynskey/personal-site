---
import Layout from '~/layouts/PageLayout.astro';
import Contact from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Sam Lynskey - Portfolio',
  ignoreTitleTemplate: true,
};

const portfolioItems = [
  {
    title: 'Snowcrest Foods',
    description: 'Brief description of project 1',
    image: '/assets/images/project1.jpg',
    url: '/portfolio/snowcrest-foods',
  },
  {
    title: 'FoodPak',
    description: 'Brief description of project 2',
    image: '/assets/images/project2.jpg',
    url: '/portfolio/foodpak',
  },
  {
    title: 'TransACTions',
    description: 'Brief description of project 3',
    image: '/assets/images/project3.jpg',
    url: '/portfolio/transactions',
  },
  {
    title: 'Coach Sanders',
    description: 'Brief description of project 4',
    image: '/assets/images/project4.jpg',
    url: '/portfolio/coach-sanders',
  },
  {
    title: 'Play Something',
    description: 'Brief description of project 5',
    image: '/assets/images/project5.jpg',
    url: '/portfolio/play-something',
  },
  {
    title: 'Umoja Pelota',
    description: 'Brief description of project 6',
    image: '/assets/images/project6.jpg',
    url: '/portfolio/umoja-pelota',
  },
  {
    title: 'Endangered Cities',
    description: 'Brief description of project 7',
    image: '/assets/images/project7.jpg',
    url: '/portfolio/endangered-cities',
  },
  {
    title: 'Never Asked',
    description: 'Brief description of project 8',
    image: '/assets/images/project8.jpg',
    url: '/portfolio/never-asked',
  },
  {
    title: 'Block In Play',
    description: 'Brief description of project 9',
    image: '/assets/images/project9.jpg',
    url: '/portfolio/block-in-play',
  },
];
---

<Layout metadata={metadata}>
  <section id="home" class="relative w-full" style="padding-top: 56.25%">
    <div class="absolute top-0 left-0 w-full h-full">
      <video class="w-full h-full object-cover" autoplay loop muted playsinline>
        <source src="/assets/hero-background.mp4" type="video/mp4" />
      </video>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section
    id="portfolio"
    class="pt-8 pb-16 md:pt-10 md:pb-20"
    style="background: linear-gradient(to right, rgb(123 16 230), rgb(100 10 200));"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">Portfolio</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {
          portfolioItems.map((item) => (
            <a href={item.url} class="group">
              <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition duration-300">
                <div class="relative aspect-square overflow-hidden">
                  <img
                    src={item.image}
                    alt={item.title}
                    class="w-full h-full object-cover bg-white p-2 rounded-lg transition-all duration-300 group-hover:scale-105 group-hover:opacity-50"
                  />
                  <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <h3 class="text-xl font-bold text-white px-4 py-2 rounded bg-black bg-opacity-60">{item.title}</h3>
                  </div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-16 md:py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row gap-10">
        <div class="md:w-1/3 flex">
          <img
            src="/assets/images/sam-profile.jpg"
            alt="Sam Lynskey"
            class="rounded-xl shadow-lg w-full object-cover md:h-auto"
          />
        </div>

        <div class="md:w-2/3">
          <h2 class="text-3xl font-bold mb-2">Sam Lynskey</h2>
          <h3 class="text-xl text-gray-600 dark:text-gray-400 mb-6">Art Director</h3>
          <div class="text-lg space-y-4">
            <p>
              I'm based in Toronto, Canada and hold diplomas from both the M.Ad School of Ideas, and Humber College.
            </p>
            <p>
              I've worked at agencies like Crew Marketing Partners, FCB/SIX, Zulu Alpha Kilo, Momentum, and McCann
              Toronto where I've had the opportunity to work on brands like Chevrolet, Subaru, Mastercard, Scotiabank,
              Aeroplan, L'Oreal, Bayer, Whirlpool, Sobeys, KFC Spain, A&W Canada, Netflix Global, International Delight,
              and T-fal kitchenware. In addition to this, I have extensive experience working in highly regulated
              industries as well as the government sector.
            </p>
            <p>
              Outside of work my passions including traveling, sustainability, and geeking out over ads. I love to
              challenge myself, and try to say 'yes' to every opportunity possible.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <Contact
    id="contact"
    title="Thanks for checking out my portfolio!"
    subtitle="Let's grab a coffee"
    socialLinks={[
      { platform: 'Email', icon: 'tabler:mail', url: 'mailto:samlynskey.sl@gmail.com' },
      { platform: 'LinkedIn', icon: 'tabler:brand-linkedin', url: 'https://www.linkedin.com/in/samlynskey' },
      { platform: 'Instagram', icon: 'tabler:brand-instagram', url: 'https://www.instagram.com/sammi_lynskey' },
    ]}
  />
</Layout>
